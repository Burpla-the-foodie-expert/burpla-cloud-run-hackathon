{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run Backend",
      "type": "shell",
      "command": "uv run python -m agent_langchain.server",
      "options": {
        "cwd": "${workspaceFolder}/backend",
        "env": {
          "PORT": "8001"
        }
      },
      "presentation": {
        "group": "test",
        "reveal": "always",
        "panel": "new",
        "echo": true,
        "focus": false
      },
      "isBackground": true,
      "problemMatcher": []
    },
    {
      "label": "Run Mobile",
      "type": "shell",
      "command": "npx expo prebuild && npx expo run:ios",
      "options": {
        "cwd": "${workspaceFolder}/mobile"
      },
      "presentation": {
        "group": "test",
        "reveal": "always",
        "panel": "new",
        "echo": true,
        "focus": false
      },
      "isBackground": true,
      "problemMatcher": []
    },
    {
      "label": "Run Frontend",
      "type": "shell",
      "command": "pnpm dev",
      "options": {
        "cwd": "${workspaceFolder}/frontend"
      },
      "presentation": {
        "group": "test",
        "reveal": "always",
        "panel": "new",
        "echo": true,
        "focus": false
      },
      "isBackground": true,
      "problemMatcher": []
    },
    {
      "label": "Run All (Backend + Mobile)",
      "dependsOn": ["Run Backend", "Run Mobile"],
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Run Full Stack (Backend + Mobile + Frontend)",
      "dependsOn": ["Run Backend", "Run Mobile", "Run Frontend"],
      "problemMatcher": []
    }
  ]
}
